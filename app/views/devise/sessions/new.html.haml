= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal' }) do |f|
  %div.control-group
    %div.controls
      %h2 Најава
  %div.control-group
    = f.label :email, 'Email', class: 'control-label'
    %div.controls
      = f.email_field :email
  %div.control-group
    = f.label :password, 'Лозинка', class: 'control-label'
    %div.controls
      = f.password_field :password
  %div.control-group
    %div.controls
      = f.submit "Најава"
  %div.control_group
    %div.controls
      = render "devise/shared/links"
