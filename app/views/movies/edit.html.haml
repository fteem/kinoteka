=form_for @movie do |f|
  %p
    = f.label :name, "Име на филмот"
    = f.text_field :name, value: @movie.name
  %p
    = f.label :year, "Година"
    = f.text_field :year, value: @movie.year
  %p
    = f.label :plot, "Кратка содржина"
    = f.text_area :plot, value: @movie.plot, rows: 25, cols: 60
  %p
    = f.label :director, "Режисер"
    = f.text_field :director, value: @movie.director
  %p
    = f.label :length_minutes, "Времетраење (во минути)"
    = f.text_field :length_minutes, value: @movie.length_minutes
  %p
    = f.submit "Промени"

